<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/cvTicket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_custom_margin8"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tvTicketNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/activity_custom_margin8"
            android:layout_marginTop="@dimen/activity_custom_margin8"
            android:layout_toRightOf="@+id/ivAlert"
            android:maxLength="20"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            tools:text="Sample Ticket"
            />

        <TextView
            android:id="@+id/tvDueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/activity_custom_margin8"
            android:layout_marginBottom="@dimen/activity_custom_margin8"
            android:layout_toRightOf="@+id/ivAlert"
            android:layout_below="@+id/tvTicketNo"
            android:maxLength="20"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:textColor="@android:color/black"
            tools:text="Sample Ticket"
            />

        <ImageView
            android:id="@+id/ivTicketType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            app:srcCompat="@mipmap/ic_launcher"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>